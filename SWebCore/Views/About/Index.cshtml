@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Index", "About", null, FormMethod.Post, false, new { enctype = "multipart/form-data", @class = "forms-sample" }))
            {

                <p class="card-description"> Hakkımda Düzenleme Paneli </p>

                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.AboutID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Doğum Tarihi</label>
                    <input asp-for="@Model.Age" type="date" class="form-control" />

                </div>
                <div class="form-group">
                    <label>Mail</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Görsel URL</label>
                    <input type="file" name="picture" />
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, 6, 3, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                @*<a asp-action="Index" asp-controller="Dashboard" class="btn btn-dark">Kaydet</a>*@
            }
        </div>

    </div>
</div>