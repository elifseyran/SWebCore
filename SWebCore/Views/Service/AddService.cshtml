                    <input type="file" name="picture" />
                    @foreach (var item in ViewBag.Images as List<string>)
                    {
                        <object type="image/svg+xml" data="~/@item"> </object>

                    }
                    <br />
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    @*<a asp-action="Index" asp-controller="Service" class="btn btn-dark">Kaydet</a>*@
                    <a asp-action="Index" asp-controller="Service" class="btn btn-dark">İptal</a>
