<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("AddService", "Service", null, FormMethod.Post, false, new { enctype = "multipart/form-data", @class = "forms-sample" }))
            {

                <p class="card-description"> Hizmet Ekleme Paneli </p>
