@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="card-header border-0">
                <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
            </div>
            @using (Html.BeginForm("EditService", "Service", FormMethod.Post))
            {

                
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.ServiceID)
                    <br />
                    @Html.Label("Hizmet Başlığı")
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    <br />
                    <label>Resim Yolu</label>
                    <input type="file" name="picture" />
                    <br />
                    <button class="btn btn-outline-success">Güncelle</button>
                    @*<a asp-action="Index" asp-controller="Service" class="btn btn-outline-dark">Güncelle</a>*@
                    <a asp-action="Index" asp-controller="Service" class="btn btn-outline-success">İptal</a>
                </form>

            }
        </div>
    </div>
</div>
