@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
                <h4 class="card-title">Hizmet Listesi Tablosu</h4>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead  id="test" class="table">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Başlık</th>
                            <th scope="col">Sil</th>
                            <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @item.ServiceID
                                </th>
                                <th class="budget">
                                    @item.Title
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Service/EditService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br /><br />
                <a href="/Service/AddService/" class="btn btn-primary">Yeni Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>
