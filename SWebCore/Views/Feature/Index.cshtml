@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Index", "Feature", FormMethod.Post))
            {

                @Html.HiddenFor(x=>x.FuatureID)  @*güncelleme*@
                <br />
                <label>Başlık</label>
                @Html.TextBoxFor(x=>x.Header, new{@class="form-control"})
                <br />
                <label>Ad Soyad</label>
                <br />
                @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
                <br />
                <label>Görev</label>
                <br />
                @Html.TextBoxFor(x=>x.Title, new{@class="form-control"})
                <br />

                <br />
                
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                @*<a asp-action="Index" asp-controller="Dashboard" class="btn btn-dark" type="submit">Güncelle</a>*@

            }
        </div>
    </div>
</div>