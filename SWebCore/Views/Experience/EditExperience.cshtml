@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
            {

                <p class="card-description">Deneyim Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>ID</label>
                        @Html.TextBoxFor(x=>x.ExperienceID, new {@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label>Firma Adı</label>
                        @Html.TextBoxFor(x=>x.CompanyName, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Pozisyon</label>
                        @Html.TextBoxFor(x=>x.Position, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlama Tarihi</label>
                         <input asp-for="StartingDate"  type="date"  class="form-control" />
                         <span asp-validation-for="StartingDate"></span>
                    </div>

                    <div class="form-group">
                        <label>Bitiş Tarihi</label>
                         <input asp-for="EndDate" type="date" class="form-control" />
                         <span asp-validation-for="EndDate"></span>
                    </div>
                    <div class="form-group">
                        <label>Firma Sektörü</label>
                        @Html.TextAreaFor(x=>x.CompanySector, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>İş Alanı</label>
                        @Html.TextAreaFor(x=>x.BusinessArea,6,3, new {@class="form-control"})
                    </div>
                   <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    @*<a asp-action="Index" asp-controller="Experience" class="btn btn-dark">Kaydet</a>*@
                    <a asp-action="Index" asp-controller="Experience" class="btn btn-primary mr-2">İptal</a>
                </form>
            }
        </div>
    </div>
</div>
