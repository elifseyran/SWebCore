@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
            {
                <p class="card-description"> Yeni Deneyim Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Firma Adı</label>
                        @*<input type="text" class="form-control" name="Name">*@
                          <span asp-validation-for="CompanyName" class="text-danger"></span>
                          <input type="text" asp-for="CompanyName" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label>Pozisyon</label>
                        @*@Html.TextBoxFor(x=>x.CompanyName, new {@class="form-control"})*@
                       @* <input type="text" class="form-control" name="CompanyName">*@
                         <span asp-validation-for="Position" class="text-danger"></span>
                    <input type="text"  asp-for="Position" class="form-control"/>

                    </div>
                    <div class="form-group">
                        <label>Başlama Tarihi</label>
                        @*<input asp-for="StartingDate" type="date"  class="form-control" />
                        *@<span asp-validation-for="StartingDate"  class="text-danger"></span>
                    <input type="date" maxlength="10" asp-for="StartingDate"  class="form-control"/>

                    </div>
                    <div class="form-group">
                        <label>Bitiş Tarihi</label>
                        <input asp-for="EndDate" type="date"  class="form-control" />
                       

                    </div>
                    <div class="form-group">
                        <label>Firma Sektörü</label>
                        @*<input type="text" class="form-control" name="CompanySector">*@
                          <span asp-validation-for="CompanySector" class="text-danger"></span>
                    <input type="text" asp-for="CompanySector" class="form-control"/>

                    </div>
                    <div class="form-group">
                        <label>İş Alanı</label>
                        @*<textarea class="form-control" name="BusinessArea" rows="6"></textarea>*@
                         <span asp-validation-for="BusinessArea" class="text-danger"></span>
                    <input type="text" asp-for="BusinessArea" class="form-control"/>

                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                   @* <a asp-action="Index" asp-controller="Experience" class="btn btn-dark">Kaydet</a>*@
                    <a asp-action="Index" asp-controller="Experience" class="btn btn-dark">İptal</a>
                </form>
            }
        </div>
    </div>
</div>