@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("AddExperience", "Experience", FormMethod.Post))
            {
                <p class="card-description"> Yeni Deneyim Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Firma Adı</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Pozisyon</label>
                        @*@Html.TextBoxFor(x=>x.CompanyName, new {@class="form-control"})*@
                        <input type="text" class="form-control" name="CompanyName">
                    </div>
                    <div class="form-group">
                        <label>Başlama Tarihi</label>
                        <input asp-for="StartingDate" type="date"  class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Bitiş Tarihi</label>
                        <input asp-for="EndDate" type="date"  class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Firma Sektörü</label>
                        <input type="text" class="form-control" name="CompanySector">
                    </div>
                    <div class="form-group">
                        <label>İş Alanı</label>
                        <textarea class="form-control" name="BusinessArea" rows="6"></textarea>
                    </div>
                    <a asp-action="Index" asp-controller="Experience" class="btn btn-dark">Kaydet</a>
                    <a asp-action="Index" asp-controller="Experience" class="btn btn-dark">İptal</a>
                </form>
            }
        </div>
    </div>
</div>