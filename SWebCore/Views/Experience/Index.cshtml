@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Firma Adı</th>
                            <th>Pozisyon</th>
                            <th>Başlama Tarihi</th>
                            <th>Bitiş Tarihi</th>
                            <th>Firma Sektörü</th>
                            <th>İş Alanı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceID</td>
                                <td>@item.CompanyName</td>
                                <td>@item.Position</td>
                                 
                                <td>@(item.StartingDate.HasValue ? item.StartingDate.Value.Date.ToString("dd MMM yyyy") : null)</td>
                                <td>@(item.EndDate.HasValue ? item.EndDate.Value.Date.ToString("dd MMM yyyy") : null)</td>
                                

                              
  
                               @* <td>@item.StartingDate</td>
                                <td>@item.EndDate</td>*@
                                <td>@item.CompanySector</td>
                                <td>@item.BusinessArea</td>
                                <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Experience/AddExperience/" class="btn btn-outline-info">Yeni Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>


