@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @using (Html.BeginForm("Index", "ContactSubplace", FormMethod.Post))
            {
                <p class="card-description"> Alt İletişim Bilgileri Düzenleme Paneli </p>
                @*<form class="forms-sample">*@
                <div class="form-group">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.ContactID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mail</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @Html.TextAreaFor(x => x.Description, 6, 3, new { @class = "form-control" })
                </div>
                <a asp-action="Index" asp-controller="Contact" class="btn btn-dark">Kaydet</a>
                <a asp-action="Index" asp-controller="Contact" class="btn btn-dark">İptal</a>
                @*</form>*@

            }
        </div>
    </div>
</div>